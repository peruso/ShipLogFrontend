@model Ship_Review.Models.XMLandSchemaFileUpload

@{
    ViewData["Title"] = "Upload XML File Page";
}

<div class="text-center">
    <h1 class="display-4">XML Validator</h1>
  
    <form method="post" asp-action="Validate" enctype="multipart/form-data">
        <div class="form-group mx-auto" style="max-width: 300px;">
            <label asp-for="XMLFile"></label>
            <input asp-for="XMLFile" type="file" accept=".xml" class="form-control" />
            <span asp-validation-for="XMLFile" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto" style="max-width: 300px;">
            <label asp-for="SchemaFile"></label>
            <input asp-for="SchemaFile" type="file" accept=".xsd" class="form-control" />
            <span asp-validation-for="SchemaFile" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Upload and Validate</button>
    </form>
</div>
